# Cloudflare Pages Cache Control Headers

# Never cache the entry point - always fetch fresh HTML
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Never cache any HTML files
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Aggressively cache hashed assets (they're immutable with content hashes)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Default for everything else - short cache
/*
  Cache-Control: public, max-age=3600
